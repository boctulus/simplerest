{
	"name":"boctulus/simplerest",
   "type":"project",
   "description":"API Rest framework for PHP",
   "keywords":[
      "simplerest",
      "framework",
      "boctulus"
   ],
   "license":"MIT",
   "authors":[
      {
         "name":"Pablo Gabriel Bozzolo",
         "email":"boctulus@gmail.com"
      }
   ],
   "version":"0.8.12",
   "require":{
      "php":">=7.4,<8.4",      
      "vlucas/phpdotenv": "^5.2",
      "boctulus/dummyapi": "@dev",
      "boctulus/shopifyconnector": "@dev",
		"nikic/php-parser": "^5.4",
		"doctrine/inflector": "^2.0",
      "kreait/firebase-php": "^7.0",
		"google/cloud-firestore": "^1.50",
		"google/protobuf": "^4.30"
   },
	"require-dev": {
      "phpunit/phpunit": "^10.0",
      "phpstan/phpstan": "^1.10"
	},
   "scripts":{
      "test": "phpunit --colors=always",
      "cs": "phpstan analyse app --level=7",
      "pre-autoload-dump":"Google\\Task\\Composer::cleanup"
   },
   "extra":{
      "google/apiclient-services":[
         "Drive"
      ]
   },
   "autoload":{
      "psr-4":{
         "Boctulus\\Simplerest\\":"app/",
         "Boctulus\\FineGrainedACL\\":"packages/boctulus/fine-grained-acl/src",
         "Boctulus\\BasicACL\\":"packages/boctulus/basic-acl/src",
         "Boctulus\\Zippy\\":"packages/boctulus/zippy/src",
         "Boctulus\\CliTest\\":"packages/boctulus/cli-test/src",
         "Boctulus\\WebTest\\":"packages/boctulus/web-test/src",
         "Boctulus\\LLMProviders\\": "packages/boctulus/llm-providers/src",
         "Boctulus\\ExchangeRate\\": "packages/boctulus/exchange-rate/src"
      },
      "exclude-from-classmap": [
         "app/Core/Templates/",
         "app/Modules/SimpleHtmlDomParser/"
      ]
   },
   "autoload-dev": {
      "psr-4": {
         "Boctulus\\Simplerest\\Tests\\": "tests/"
      }
   },
   "repositories": [    
    {
        "type": "path",
        "url": "packages/boctulus/shopifyconnector",
        "options": {
            "symlink": true
        }
    },
    {
        "type": "path",
        "url": "packages/boctulus/dummyapi",
        "options": {
            "symlink": true
        }
    }
   ],
   "config":{
      "optimize-autoloader":true,
      "allow-plugins":{
         "php-http/discovery":true
      },      
      "preferred-install": {
        "boctulus/api-client": "dist",
        "boctulus/shopifyconnector": "dist"
      }
   },
   "minimum-stability":"stable",
   "prefer-stable":true
}
